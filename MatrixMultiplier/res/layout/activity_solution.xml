<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.matrixmultiplier.SolutionActivity" >

    <EditText
        android:id="@+id/solEditText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="34dp"
        android:layout_toLeftOf="@+id/textView1"
        android:background="@drawable/shape"
        android:ems="10" >
    </EditText>

    <EditText
        android:id="@+id/solEditText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/solEditText1"
        android:layout_alignRight="@+id/textView1"
        android:layout_toRightOf="@+id/solEditText1"
        android:background="@drawable/shape"
        android:ems="10" />

    <EditText
        android:id="@+id/solEditText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/solEditText2"
        android:layout_toRightOf="@+id/solEditText2"
        android:background="@drawable/shape"
        android:ems="10" />

    <EditText
        android:id="@+id/solEditText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/solEditText5"
        android:layout_alignLeft="@+id/solEditText3"
        android:background="@drawable/shape"
        android:ems="10" />

    <EditText
        android:id="@+id/solEditText9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/solEditText8"
        android:layout_alignBottom="@+id/solEditText8"
        android:layout_toRightOf="@+id/solEditText8"
        android:background="@drawable/shape"
        android:ems="10" />

    <EditText
        android:id="@+id/solEditText8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/solEditText5"
        android:layout_alignRight="@+id/solEditText5"
        android:layout_alignTop="@+id/solEditText7"
        android:background="@drawable/shape"
        android:ems="10" />

    <EditText
        android:id="@+id/solEditText7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/solEditText4"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/solEditText8"
        android:background="@drawable/shape"
        android:ems="10" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/solEditText8"
        android:layout_marginTop="34dp"
        android:layout_toRightOf="@+id/solEditText7"
        android:onClick="goToMainActivity"
        android:text="INPUT AGAIN" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:text="PRODUCT MATRIX" />

    <EditText
        android:id="@+id/solEditText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/solEditText1"
        android:layout_marginTop="41dp"
        android:layout_toLeftOf="@+id/solEditText5"
        android:background="@drawable/shape"
        android:ems="10" />

    <EditText
        android:id="@+id/solEditText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/solEditText4"
        android:layout_alignBottom="@+id/solEditText4"
        android:layout_alignLeft="@+id/solEditText2"
        android:layout_toLeftOf="@+id/solEditText6"
        android:background="@drawable/shape"
        android:ems="10" />

    <RelativeLayout
        android:id="@+id/sol_ad_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/button1" >
    </RelativeLayout>

</RelativeLayout>
